package Backend.Sprint1.S1_02.n2exercici1;


package s1_02.n2exercici1;

import java.util.Scanner;

public class App {
    
    public static void main(String[] args) throws Entrada{
        
        
        Scanner instanciaScanner = new Scanner(System.in);
        
        
        
        int valorInt = llegirInt("Introdueixi un n√∫mero enter", instanciaScanner);

              
         
        
    }
    
    
    
    

    
    public static int llegirInt(String missatge, Scanner instanciaScanner) throws Entrada {
        
        int valor = 0;
        boolean sonIguales = true;
        
        do {            
            
            
            System.out.println(missatge);
            
            valor = instanciaScanner.nextInt();
            
            if (!((Object) valor instanceof Integer)) {
                
                try {
                    
                    throw new Entrada();
                    
                } catch (Exception e) {
                    
                    System.out.println("Dada incorrecte");
                    e.printStackTrace();
                }
                
            } else {
                
                System.out.println("Dada correcte");
            }
            
               
            
        } while (!((Object) valor instanceof Integer));
        
        
        return valor;
        
    }
    

    public static double llegirDouble(String missatge, Scanner instanciaScanner) throws Entrada{

        
        double valor;
        boolean sonIguales = true;
        
       
        do {            
            

            System.out.println(missatge);

            valor = instanciaScanner.nextDouble();

                if ((Object)valor instanceof Double) {

                    System.out.println("Dada correcte");
                    

                } else {

                    sonIguales = false;
                    throw new Entrada("Dada incorrecte, torni a introduir una dada");
                    
                }
        
            
        } while (sonIguales == false);
        
        
  
        return valor;
        
    }
    


}
    
    
    
    
    

