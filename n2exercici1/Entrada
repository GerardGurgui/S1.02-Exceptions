package Backend.Sprint1.S1_02.n2exercici1;

package S1_02.n2exercici1;

import java.util.InputMismatchException;
import java.util.Scanner;


public class Entrada extends Exception  {
    
    static Scanner input = new Scanner(System.in);
    
    //METODES-InputMismatchException:
        //BYTE
    
    public static byte llegirByte(String missatge){
        
        byte valor = 0;
        boolean capturaError = false;
        
        do {            
            
            try {
                
                System.out.println(missatge);
                valor = input.nextByte();
                capturaError = false;
                
            } catch (InputMismatchException e) {
                
                System.out.println("Error de format, has d'introduir un número byte");
                input.next(); //evitar bucle infinit
                capturaError = true;
                
            }
              
        } while (capturaError == true);
        
        return valor;
        
    }
    
    
        //INT
    
    public static int llegirInt(String missatge){
        
        int valor = 0;
        boolean capturaError = false;
        
        do {            
            
            try {
                
                System.out.println(missatge);
                valor = input.nextInt();
                capturaError = false;
                
            } catch (InputMismatchException e) {
                
                System.out.println("Error de format, has d'introduir un número enter");
                input.next(); //evitar bucle infinit
                capturaError = true;
                
            }
              
        } while (capturaError == true);
        
        return valor;
        
    }
    
    
    
        //FLOAT
    
    public static float llegirFloat(String missatge) {
        
        float valor = 0;
        boolean capturaError;
        
        do {            
            
            try {
                
                System.out.println(missatge);
                valor = input.nextFloat();
                capturaError = false;
                
            } catch (InputMismatchException e) {
                
                System.out.println("Error de format, has d'introduir un número amb coma (flotant)");
                input.next(); //evitar bucle infinit
                capturaError = true;
                
            }
              
        } while (capturaError == true);
        
        return valor;
        
    }
    
    
    
        //DOUBLE

    public static double llegirDouble(String missatge){

        
        double valor = 0;
        boolean capturaError;
        
        do {            
            
            try {
                
                System.out.println(missatge);
                valor =  input.nextDouble();
                capturaError = false;
                
                
            } catch (InputMismatchException e) {
                
                System.out.println("Error de format, has d'introduir un número decimal");
                input.next(); //evitar bucle infinit
                capturaError = true;
                
            }
            
            input.nextLine();
              
        } while (capturaError == true);
        
        return valor;
        
    }
    
    
    
    
    //METODES-Exception
        //Char
    
    public static char llegirChar(String missatge){
        
        
        char caracter = ' ';
        boolean capturaError = false;
        
        do {            
            
            try {
                
                System.out.println(missatge);
                caracter = input.next().charAt(0); //Recollim les dades amb String per poder fer servir el length
                capturaError = false;

                   
            }catch (Exception e) {
                
                System.out.println("Error de format, has d'introduir un sol caracter");  
                capturaError = true; 
                
            }
            
            input.nextLine(); //Clean buffer
            
        } while (capturaError == true);
        
       return caracter;
        
    }
    
    
        //String
    
    public static String llegirString(String missatge){

        
        String cadena = "";
        boolean capturaError = false;
        
        
        do {            
            
            try {
                
                System.out.println(missatge);
                cadena = input.nextLine();   //Recollim les dades amb String per poder fer servir el length
                capturaError = false;
                
            }catch (Exception e) {
                
                System.out.println("Error de format, has d'introduir un cadena de caracters");
                capturaError = true;
            }
            
            
        } while (capturaError == true);
        
       return cadena;
        
    }
    
        //Boolean
    
    public static boolean llegirSiNo(String missatge){
        
        String lletra = "";
        boolean retorno = false;
        
        do {            
            
            try {
                
                System.out.println(missatge);
                lletra = input.nextLine();
                
                
                if (lletra.equals("s") || lletra.equals("S")) {
                    
                    retorno = true;
                    
                } else if (lletra.equals("n") || lletra.equals("N")){
                    
                    retorno = false;
                }
                
            } catch (Exception e) {
                
                System.out.println("Dada incorrecte, has d'introduir o S o N");
                
            }
            
        } while (!(lletra.equals("s") || lletra.equals("S") || lletra.equals("n") || lletra.equals("N")));
        
        
         return retorno;
        
      
    }
    
    
}
