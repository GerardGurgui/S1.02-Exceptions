package Backend.Sprint1.S1_02.n2exercici1;

package S1_02.n2exercici1;

import java.util.InputMismatchException;
import java.util.Scanner;


public class Entrada extends Exception  {
    
    
    
    //METODES
        //BYTE
    
    public static byte llegirByte(String missatge) throws Entrada{
        
        byte valor = 0;
        boolean capturaError = false;
        
        do {            
            
            try {
                
                System.out.println(missatge);
                valor = App.input.nextByte();
                capturaError = false;
                
            } catch (Exception e) {
                
                System.out.println("Error de format, has d'introduir un número byte");
                App.input.next(); //evitar bucle infinit
                capturaError = true;
                
            }
              
        } while (capturaError == true);
        
        return valor;
        
    }
    
    
        //INT
    
    public static int llegirInt(String missatge) throws Entrada {
        
        int valor = 0;
        boolean capturaError = false;
        
        do {            
            
            try {
                
                System.out.println(missatge);
                valor =App.input.nextInt();
                capturaError = false;
                
            } catch (Exception e) {
                
                System.out.println("Error de format, has d'introduir un número enter");
                App.input.next(); //evitar bucle infinit
                capturaError = true;
                
            }
              
        } while (capturaError == true);
        
        return valor;
        
    }
    
    
    
        //FLOAT
    
    public static float llegirFloat(String missatge) {
        
        float valor = 0;
        boolean capturaError;
        
        do {            
            
            try {
                
                System.out.println(missatge);
                valor = App.input.nextFloat();
                capturaError = false;
                
            } catch (Exception e) {
                
                System.out.println("Error de format, has d'introduir un número amb coma (flotant)");
                App.input.next(); //evitar bucle infinit
                capturaError = true;
                
            }
              
        } while (capturaError == true);
        
        return valor;
        
    }
    
    
    
        //DOUBLE

    public static double llegirDouble(String missatge) throws Entrada{

        
        double valor = 0;
        boolean capturaError;
        
        do {            
            
            try {
                
                System.out.println(missatge);
                valor =  App.input.nextDouble();
                capturaError = false;
                
                
            } catch (Exception e) {
                
                System.out.println("Error de format, has d'introduir un número decimal");
                App.input.next(); //evitar bucle infinit
                capturaError = true;
                
            }
            
            App.input.nextLine();
              
        } while (capturaError == true);
        
        return valor;
        
    }
    
    
    
    
    //METODES
        //Char
    
    public static char llegirChar(String missatge) throws Entrada{
        
        String cadena = "";
        int totalCadena = 0;
        char cadenaChar = ' ';
        
        do {            
            
            try {
                
                System.out.println(missatge);
                cadena = App.input.nextLine();   //Recollim les dades amb String per poder fer servir el length
                totalCadena = cadena.length();   //Obtenim el total de la cadena
               
                if(totalCadena != 1){
                    
                    throw new Entrada(); 
                }
                
                    
            }catch (Exception e) {
                
                System.out.println("Error de format, has d'introduir un sol caracter");
                 
                
            }
            
            cadenaChar = cadena.charAt(0);
            
            
        } while (totalCadena != 1);
        
       return cadenaChar;
        
    }
    
    
        //String
    
    public static String llegirString(String missatge) throws Entrada{

        
        String valor = "";
        boolean capturaError = false;
        
        do {            
            
            try {
                
                System.out.println(missatge);
                App.input.nextLine();
                valor = App.input.nextLine();
                capturaError = false;
                
                
            } catch (Exception e) {
                
                System.out.println("Dada incorrecte, has d'introduir una cadena de carácters");
                App.input.next(); //evitar bucle infinit
                capturaError = true;
                
            }
              
        } while (capturaError == true);
        
        return valor;
        
    }
    
    
        //Boolean
    
    public static boolean llegirSiNo(String missatge) throws Entrada{
        
        String valor = "";
        boolean retorno = false;
        
        do {            
            
            try {
                
                System.out.println(missatge);
                valor =App.input.nextLine();
                
             if(!(valor.equals("s") || valor.equals("n"))){
                 
                throw new Entrada();
                 
             }
            
             
            } catch (Exception e) {
                
                System.out.println("Dada incorrecte, has d'introduir o S o N");
                
            }
            
        } while (!(valor.equals("s") || valor.equals("n")));
        
        
            if (valor.equals("s")) {

                retorno = true;

            } else if (valor.equals("n")){

                retorno = false;
            }
       
        
        
        return retorno;
        
    }
    
    
}
